<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.tipsforfreefireguide2020.SplashFragmentFire"
        android:label="splash_fragment"
        tools:layout="@layout/splash_fragment_fire">
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.tipsforfreefireguide2020.bookList.MainFragmentFire"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main_fire">
        <action
            android:id="@+id/action_mainFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.tipsforfreefireguide2020.detail.BookDetailFragmentFire"
        android:label="fragment_book_detail"
        tools:layout="@layout/fragment_book_detail_fire" />
</navigation>